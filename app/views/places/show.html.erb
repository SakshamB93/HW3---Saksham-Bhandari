<h1><%= @place["name"] %></h1>

<% if @entries.present? %> <!-- To check if @entries exists and has data -->
  <% for entry in @entries %> 
      <h3><%= entry["title"] %></h3>
      <p><%= entry["occurred_on"] %></p>
      <p><%= entry["description"] %></p>
  <% end %>
<% else %>
  <p>No posts found.</p>
<% end %>

<p> 
  <a href="/entries/new?id=<%= @place["id"] %>">Add a new post</a> <!-- Passing place id as a param to map new entry to place -->
</p>
<p> 
  <a href="/">Go back to places list</a> 
</p>
